<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookMyShow - Movie Listings</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">

  <!-- Header -->
  <header class="bg-red-600 py-4">
    <div class="container mx-auto flex justify-between items-center px-4">
      <a href="/" class="text-2xl font-bold">BookMyShow</a>
      <nav class="space-x-4">
        <a href="#" class="hover:underline">Movies</a>
        <a href="#" class="hover:underline">Events</a>
        <a href="#" class="hover:underline">Plays</a>
        <a href="#" class="hover:underline">Sports</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-8 px-4">
    <h2 class="text-3xl font-semibold mb-6 text-center">Movies</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% users.map((val) => { %>
        <!-- Movie Card -->
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
          <img src="<%= val.image %>" alt="<%= val.name %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2"><%= val.movieName %></h3>
            <p class="text-gray-400 text-sm mb-2"><%= val.discription %></p>
            <p class="text-gray-400 text-sm mb-4"><%= val.price %></p>
            <div class="flex space-x-4">
              <a href="/edit/<%= val.id %>" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Edit</a>
              <a href="/delete/<%= val.id %>" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main
  <!-- Footer -->
  <footer class="bg-gray-800 py-4">
    <div class="container mx-auto text-center text-gray-400">
      <p>&copy; 2024 BookMyShow. All rights reserved.</p>
    </div>
  </footer>
</body>

</html>
